    "license": "ISC",
    "dependencies": {
      "express": "^4.18.2",
      "mongoose": "^8.0.3",
      "bcryptjs": "^2.4.3",
      "jsonwebtoken": "^9.0.2",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express-validator": "^7.0.1",
      "helmet": "^7.1.0",
      "morgan": "^1.10.0"
    },
    "devDependencies": {
      "nodemon": "^3.0.2",
      "jest": "^29.7.0",
      "supertest": "^6.3.3",
      "eslint": "^8.56.0",
      "eslint-config-airbnb-base": "^15.0.0",
      "eslint-plugin-import": "^2.29.1",
      "@types/jest": "^29.5.11"
    },
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=9.0.0"
    },
    "jest": {
      "testEnvironment": "node",
      "coveragePathIgnorePatterns": [
        "/node_modules/"
