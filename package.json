{
    "name": "medicaments-backend",
    "version": "1.0.0",
    "description": "Backend pour système de gestion des achats de médicaments",
    "main": "server.js",
    "scripts": {
      "start": "node server.js",
      "dev": "nodemon server.js",
      "test": "jest --coverage --detectOpenHandles",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "lint": "eslint .",
