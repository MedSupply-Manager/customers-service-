{
    "info": {
      "name": "Système Médicaments API",
      "description": "Collection complète pour tester l'API de gestion des médicaments",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:5000",
        "type": "string"
      },
      {
        "key": "token",
        "value": "",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "Authentification",
        "item": [
          {
            "name": "Inscription Client",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"username\": \"jean_dupont\",\n  \"email\": \"jean@example.com\",\n  \"password\": \"Password123!\",\n  \"clientType\": \"Client\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/auth/register",
                "host": ["{{baseUrl}}"],
                "path": ["api", "auth", "register"]
              }
            }
          },
          {
            "name": "Connexion",
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 200) {",
                    "    const response = pm.response.json();",
                    "    pm.collectionVariables.set('token', response.token);",
                    "}"
                  ]
                }
              }
            ],
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"jean@example.com\",\n  \"password\": \"Client123!\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/auth/login",
                "host": ["{{baseUrl}}"],
                "path": ["api", "auth", "login"]
              }
            }
          },
          {
            "name": "Déconnexion",
            "request": {
              "method": "POST",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/auth/logout",
                "host": ["{{baseUrl}}"],
                "path": ["api", "auth", "logout"]
              }
            }
          }
        ]
      },
      {
        "name": "Produits",
        "item": [
          {
            "name": "Consulter catalogue médicaments",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/products",
                "host": ["{{baseUrl}}"],
                "path": ["api", "products"]
              }
            }
          },
          {
            "name": "Rechercher médicaments",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/products?search=paracetamol",
                "host": ["{{baseUrl}}"],
                "path": ["api", "products"],
                "query": [
                  {
                    "key": "search",
                    "value": "paracetamol"
                  }
                ]
              }
            }
          },
          {
            "name": "Consulter détails produit",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/products/:id",
                "host": ["{{baseUrl}}"],
                "path": ["api", "products", ":id"],
                "variable": [
                  {
                    "key": "id",
                    "value": "PRODUCT_ID"
                  }
                ]
              }
            }
          },
          {
            "name": "Créer produit",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                },
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"code\": \"MED999\",\n  \"nom\": \"Nouveau Médicament\",\n  \"description\": \"Description du médicament\",\n  \"prixUnitaire\": 15.50,\n  \"unite\": \"boîte\",\n  \"categorieId\": 1,\n  \"fournisseurId\": 100,\n  \"seuilAlerte\": 20,\n  \"actif\": true\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/products",
                "host": ["{{baseUrl}}"],
                "path": ["api", "products"]
              }
            }
          }
        ]
      },
      {
        "name": "Listes d'achat",
        "item": [
          {
            "name": "Créer liste d'achat",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/shopping-lists",
                "host": ["{{baseUrl}}"],
                "path": ["api", "shopping-lists"]
              }
            }
          },
          {
            "name": "Consulter mes listes d'achat",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/shopping-lists",
                "host": ["{{baseUrl}}"],
                "path": ["api", "shopping-lists"]
              }
            }
          },
          {
            "name": "Consulter une liste d'achat",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/shopping-lists/:id",
                "host": ["{{baseUrl}}"],
                "path": ["api", "shopping-lists", ":id"],
                "variable": [
                  {
                    "key": "id",
                    "value": "LIST_ID"
                  }
                ]
              }
            }
          },
          {
            "name": "Ajouter médicament à la liste",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                },
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"productId\": \"PRODUCT_ID\",\n  \"quantity\": 2\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/shopping-lists/:id/items",
                "host": ["{{baseUrl}}"],
                "path": ["api", "shopping-lists", ":id", "items"],
                "variable": [
                  {
                    "key": "id",
                    "value": "LIST_ID"
                  }
                ]
              }
            }
          },
          {
            "name": "Retirer médicament de la liste",
            "request": {
              "method": "DELETE",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/shopping-lists/:id/items/:itemId",
                "host": ["{{baseUrl}}"],
                "path": ["api", "shopping-lists", ":id", "items", ":itemId"],
                "variable": [
                  {
                    "key": "id",
                    "value": "LIST_ID"
                  },
                  {
                    "key": "itemId",
                    "value": "ITEM_ID"
                  }
                ]
              }
            }
          },
          {
            "name": "Modifier statut liste",
            "request": {
              "method": "PATCH",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                },
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"status\": \"confirmed\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/shopping-lists/:id/status",
                "host": ["{{baseUrl}}"],
                "path": ["api", "shopping-lists", ":id", "status"],
                "variable": [
                  {
                    "key": "id",
                    "value": "LIST_ID"
                  }
                ]
              }
            }
          },
          {
            "name": "Supprimer liste",
            "request": {
              "method": "DELETE",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/shopping-lists/:id",
                "host": ["{{baseUrl}}"],
                "path": ["api", "shopping-lists", ":id"],
                "variable": [
                  {
                    "key": "id",
                    "value": "LIST_ID"
                  }
                ]
              }
            }
          }
        ]
      },
      {
        "name": "Client",
        "item": [
          {
            "name": "Obtenir profil",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/api/clients/profile",
                "host": ["{{baseUrl}}"],
                "path": ["api", "clients", "profile"]
              }
            }
          },
          {
            "name": "Modifier profil",
            "request": {
              "method": "PUT",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                },
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"username\": \"nouveau_nom\",\n  \"email\": \"nouveau@email.com\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/clients/profile",
                "host": ["{{baseUrl}}"],
                "path": ["api", "clients", "profile"]
              }
            }
          },
          {
            "name": "Changer mot de passe",
            "request": {
              "method": "PUT",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{token}}"
                },
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"currentPassword\": \"Client123!\",\n  \"newPassword\": \"NewPassword456!\"\n}"
              },
              "url": {
                "raw": "{{baseUrl}}/api/clients/change-password",
                "host": ["{{baseUrl}}"],
                "path": ["api", "clients", "change-password"]
              }
            }
          }
        ]
      },
      {
        "name": "Health Check",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "{{baseUrl}}/health",
            "host": ["{{baseUrl}}"],
            "path": ["health"]
          }
        }
      }
    ]
  }